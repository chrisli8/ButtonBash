<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="projectbtn.chrisli8.washington.edu.projectbtn.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/topBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="40dp"
            android:gravity="center"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/topBtn"
            android:id="@+id/grid">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnFirstRow">
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:id="@+id/btnR1C1"/>
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:id="@+id/btnR1C2"/>
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:id="@+id/btnR1C3"/>
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:id="@+id/btnR1C4"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnFirstRow"
                android:id="@+id/btnSecondRow">
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:id="@+id/btnR2C1"/>
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:id="@+id/btnR2C2"/>
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:id="@+id/btnR2C3"/>
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:id="@+id/btnR2C4"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnSecondRow"
                android:id="@+id/btnThirdRow">
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:id="@+id/btnR3C1"/>
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:id="@+id/btnR3C2"/>
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:id="@+id/btnR3C3"/>
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:id="@+id/btnR3C4"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnThirdRow"
                android:id="@+id/btnForthRow">
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:id="@+id/btnR4C1"/>
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:id="@+id/btnR4C2"/>
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:id="@+id/btnR4C3"/>
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:id="@+id/btnR4C4"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <Button
                android:id="@+id/botBtn"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="Reset"
                android:textSize="30dp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/menuBtn"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="Menu"
                android:textSize="30dp"
                android:layout_weight="1"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
